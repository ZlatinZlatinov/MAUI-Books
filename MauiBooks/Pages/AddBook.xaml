<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBooks.Pages.AddBook"
             Title="AddBook">
    
    <VerticalStackLayout Spacing="20">
        <Label Text="Add New Book"/>
        <Entry x:Name="title" Placeholder="Book Title"/>
        <Editor x:Name="description" Placeholder="Book Description" AutoSize="TextChanges"/>
        <Entry x:Name="author" Placeholder="Book Author"/>
        <Entry x:Name="imgUrl" Placeholder="Book Image"/>
        <Button x:Name="saveBook" Text="Save" Clicked="saveBook_Clicked_2"/>
    </VerticalStackLayout>
</ContentPage>